@model SistemaCIA.Models.Academias.AcademiasLeccionesModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    ul > li {
        list-style: none;
    }

    .table {
        display: none;
    }
</style>

<h2>Programa de @ViewBag.nombre</h2>
<h5>@ViewBag.fecha</h5>
@Html.HiddenFor(model => model.CodigoAcademia)
<ul>
    @{
        int c = 0;
    }
    @foreach (var group in Model.academiasNiveles.GroupBy(item => item.CodigoNivel))
    {
        <li>
            <br />
            @{
                var obj = Model.academiasNiveles.FirstOrDefault(x => x.CodigoNivel == group.Key);
            }
            <a onclick="mostrar(@c);" style="margin-left:30px;font-size:20px;">@Html.DisplayName(obj.CodigoNivelNavigation.Nombre)</a>
            <ul>
                <li>
                    <table id="tab_@c" class="table">
                        <thead>
                            <tr>
                                <th>
                                    Numero leccion
                                </th>
                                <th>
                                    Hora
                                </th>
                                <th>
                                    Leccion
                                </th>
                                <th>
                                    Expositor
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.nivelesLecciones)
                            {
                                if (item.CodigoNivel == obj.CodigoNivel)
                                {

                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NumeroLeccion)
                                        </td>
                                        @if (item.NumeroLeccion == 1)
                                        {
                                            <td>
                                                8:00am - 9:00am
                                            </td>
                                        }
                                        else if (item.NumeroLeccion == 2)
                                        {

                                            <td>
                                                9:40am - 10:30am
                                            </td>
                                        }
                                        else if (item.NumeroLeccion == 3)
                                        {

                                            <td>
                                                10:30am - 11:20am
                                            </td>
                                        }
                                        else if (item.NumeroLeccion == 4)
                                        {
                                            <td>
                                                11:20am - 12:10am
                                            </td>

                                        }
                                        else if (item.NumeroLeccion == 5)
                                        {

                                            <td>
                                                1:00pm - 1:50pm
                                            </td>
                                        }
                                        else if (item.NumeroLeccion == 6)
                                        {

                                            <td>
                                                1:50pm - 2:40pm
                                            </td>
                                        }

                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>*@
                                        @*<td>
                                            <select asp-for="@item." id="@c" style="height:35px;" class="form-control" asp-items="ViewBag.Guias"></select>
                                            <span asp-validation-for="@item.Guia" class="text-danger"></span>
                                        </td>*@
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>

                </li>
            </ul>
        </li>
        c++;

    }
</ul>
<script>

    function mostrar(c) {
        if (document.getElementById("tab_" + c).style.display == "table") {
            document.getElementById("tab_" + c).style.display = "none";

        } else {
            document.getElementById("tab_" + c).style.display = "table";
        }
    }

</script>
