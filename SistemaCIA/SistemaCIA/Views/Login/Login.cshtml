@model SistemaCIA.Models.Login.LoginModel
@{
    ViewData["Title"] = "Ingreso";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/css?family=Bree+Serif|Vollkorn|Merriweather" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body class="loginb">

    @if (!string.IsNullOrEmpty(ViewBag.msj))
    {
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Error:</strong> @ViewBag.msj
        </div>
    }
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

                <div class="login">
                    <div class="loginheader">
                        <h3>Inicio de sesión</h3>
                    </div>
                    <div class="loginbody">
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div style="margin-top:25px;" class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input asp-for="Usuario" placeholder="Usuario" class="form-control" required />
                                    <span asp-validation-for="Usuario" class="text-danger"></span>
                                </div>  
                            </div>
                            <div style="margin-top:30px;" class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    <input asp-for="Clave" placeholder="Contraseña" class="form-control" type="password" required />
                                    <span asp-validation-for="Clave" class="text-danger"></span>
                                </div>
                                
                            </div>
                            <div class="form-group">
                                <center>
                                    <input type="submit" value="Iniciar Sesión" class="btn-login" />
                                </center>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
    


</body>
</html>


    