@model IEnumerable<SistemaCIA.Models.ContextDb.Encuentros>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="contenido">
    <div class="row">
        <div class="panel-heading division">
            <h3><img width="50" src="~/images/logo2.jpg" />Encuentros</h3>
        </div>
    </div>
    
@if (Model.Count() == 0)
{
    <h1>Mostrar un mensaje que diga que en este omento no hay un encuentro disponible para poder insertar encuentristas</h1>
}
else
{
    
    <div class="table-responsive">
        <table class="table table-hover">
            <thead  style="background-color:#15748c; color:white;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Lema)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Objetivo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaInicio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaFinal)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lema)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Objetivo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaFinal)
                        </td>
                        <td>
                            <a style="float:none;" class="btn btn-xs btn-next" asp-action="AgregarEncuentrista" asp-route-id="@item.CodigoEncuentro"><small>Agregar encuentrista</small></a>
                            <a style="float:none;" class="btn btn-xs btn-next" asp-action="Encuentristas" asp-route-id="@item.CodigoEncuentro"><small>Encuentristas</small></a>
                        </td>
                    </tr>  
                }
            </tbody>
        </table>
    </div>
}
</div>



