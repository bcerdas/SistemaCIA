@model SistemaCIA.Models.ContextDb.Encuentros

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid contenido">
    <div class="row">
        <div class="panel-heading division">
            <h3><img width="50" src="~/images/logo2.jpg" />Crear encuentro</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CrearEncuentro">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lema" class="control-label"></label>
                    <textarea asp-for="Lema" class="form-control" rows="5" style="resize:vertical"/>
                    <span asp-validation-for="Lema" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Objetivo" class="control-label"></label>
                    <textarea asp-for="Objetivo" class="form-control" rows="5" style="resize:vertical"/>
                    <span asp-validation-for="Objetivo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaInicio" class="control-label"></label>
                    <input asp-for="FechaInicio" class="form-control" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaFinal" class="control-label"></label>
                    <input asp-for="FechaFinal" class="form-control" />
                    <span asp-validation-for="FechaFinal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>

            </form>
        </div>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
