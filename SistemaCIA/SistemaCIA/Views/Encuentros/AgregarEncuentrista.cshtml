                                } else {
                                    document.getElementById('encargado').style.display = 'block';
                                    document.getElementById('encargado').className = 'animated fadeIn panel panel-primary';
                                }
                            }
                        </script>
                        <div style="display:none;" id="madrePadre">
                            <div class="panel-heading">
                                <h3>Madre y Padre</h3>
                            </div>
                            <div class="panel-body">
                                <div class="form-group">
                                    <label asp-for="NombreCompletoMadre" class="control-label">Nombre Completo de la Madre</label>
                                    <input asp-for="NombreCompletoMadre" class="form-control" />
                                    <span asp-validation-for="NombreCompletoMadre" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TelefonoMadre" class="control-label">Teléfono Madre</label>
                                    <input asp-for="TelefonoMadre" class="form-control" />
                                    <span asp-validation-for="TelefonoMadre" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NombreCompletoPadre" class="control-label">Nombre Completo del Padre</label>
                                    <input asp-for="NombreCompletoPadre" class="form-control" />
                                    <span asp-validation-for="NombreCompletoPadre" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TelefonoPadre" class="control-label">Teléfono Padre</label>
