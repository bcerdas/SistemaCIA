    ViewData["Title"] = "Agregar Encuentrista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="~/js/formToWizard.js"></script>
<script type="text/javascript">
        $(document).ready(function(){
            $("#agregarEncuentrista").formToWizard({ submitButton: 'agregar' })
        });
</script>

<script type="text/javascript">
    var cont = 0;

    function llenaBarra() {
        cont += 1;
        if (cont == 1) { 
            document.getElementById('barra').style.width = '54%';
        }
        
        if (cont == 2) { 
            document.getElementById('barra').style.width = '77%';
        }

        if (cont == 3) {
            document.getElementById('barra').style.width = '100%';
        }
    }

    function vaciaBarra() {
        cont = cont - 1;
        if (cont == 0)
            document.getElementById('barra').style.width = '32%';
        if (cont == 1)
            document.getElementById('barra').style.width = '54%';
        if (cont == 2)
            document.getElementById('barra').style.width = '77%';
    }
     
</script>

<div class="contenido">

    <div class="row">
        <div class="panel-heading division" style="border-bottom: solid 2px #1e7c9b">
            <h3><img width="50" src="~/images/logo2.jpg" />Agregar encuentrista</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-5 col-sm-offset-3">
            <div class="panel-body division">
                <form id="agregarEncuentrista" asp-action="AgregarEncuentrista">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="progress progress-striped active">
                        <div id="barra" class="progress-bar progress-bar-success" role="progressbar"
                             aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"
                             style="width: 32%">
                        </div>
                    </div>
                    <fieldset>
                        <legend style="display:none;"><i style="position:center;" class="fa fa-address-book-o fa-2x"></i><br />Información Personal</legend>
