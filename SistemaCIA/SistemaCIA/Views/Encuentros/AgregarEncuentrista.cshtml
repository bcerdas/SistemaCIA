                    <div class="form-group">
                        <label asp-for="NombreCompletoMadre" class="control-label"></label>
                        <input asp-for="NombreCompletoMadre" class="form-control" />
                        <span asp-validation-for="NombreCompletoMadre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
