                                    <span asp-validation-for="NombreCompletoEncargado" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TelefonoEncargado" class="control-label">Teléfono del Encargado</label>
                                    <input asp-for="TelefonoEncargado" class="form-control" />
                                    <span asp-validation-for="TelefonoEncargado" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ParentescoEncargado" class="control-label">Parentesco Encargado</label>
                                    <input asp-for="ParentescoEncargado" class="form-control" />
                                    <span asp-validation-for="ParentescoEncargado" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                    </fieldset>
                    <fieldset>
                        <legend style="display:none;"><i class="fa fa-check fa-3x"></i></legend>
                        <center>
                            <h3 id="terminado">Has terminado<br /><i class="fa fa-check fa-3x"></i></h3>
                            <p>
                                <input id="agregar" class="btn btn-sm btn-next" type="submit" value="Agregar Encuentrista" />
                            </p>
                        </center>
                    </fieldset>
                    
                </form>
            </div>
            
        </div>
   </div>            
</div>

        

