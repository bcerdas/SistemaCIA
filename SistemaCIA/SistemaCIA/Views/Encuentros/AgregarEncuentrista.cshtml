                        <span asp-validation-for="NombreCompletoPadre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TelefonoPadre" class="control-label"></label>
                        <input asp-for="TelefonoPadre" class="form-control" />
                        <span asp-validation-for="TelefonoPadre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NombreCompletoEncargado" class="control-label"></label>
                        <input asp-for="NombreCompletoEncargado" class="form-control" />
                        <span asp-validation-for="NombreCompletoEncargado" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TelefonoEncargado" class="control-label"></label>
                        <input asp-for="TelefonoEncargado" class="form-control" />
                        <span asp-validation-for="TelefonoEncargado" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ParentescoEncargado" class="control-label"></label>
                        <input asp-for="ParentescoEncargado" class="form-control" onclick="llenaBarra()" />
                        <span asp-validation-for="ParentescoEncargado" class="text-danger"></span>
                    </div>
                </fieldset>
                <fieldset>
                    <legend><i class="fa fa-check fa-3x"></i></legend>
                </fieldset>
                <p>
                    <input id="SaveAccount" type="button" value="Agregar Encuentrista"/>
                </p>
            </form>
        </div>
                <div class="col-sm-3"></div>
        </div>
            
    </div>

        

