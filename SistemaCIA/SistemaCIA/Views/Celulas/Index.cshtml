@model IEnumerable<SistemaCIA.Models.ContextDb.Celulas>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Lugar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hora)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PromedioPersonas)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.AsistenteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CelulaRaizNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LiderNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Lugar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PromedioPersonas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AsistenteNavigation.CodigoPersona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CelulaRaizNavigation.CodigoCelula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LiderNavigation.CodigoPersona)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodigoCelula">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodigoCelula">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodigoCelula">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
