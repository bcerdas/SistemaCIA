@model IEnumerable<SistemaCIA.Models.ContextDb.Celulas>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {

        $("#tbCelulas tbody tr").dblclick(function () {
            var Celula = {};
            var cod, nom;
            cod = Celula.Codigo = $(this).children().eq('0').text().trim();
            nom = Celula.Nombre = $(this).children().eq('1').text().trim() +
                " " + $(this).children().eq('2').text().trim() +
                " " + $(this).children().eq('3').text().trim();
            console.info(cod, nom);
            window.opener.obtenerCelula(Celula);
            window.close();

        });
    });
</script>

<h2>Celulas</h2>
<div class="row">
    <div class="col-md-4">
        <input id="buscar" type="text" class="form-control" placeholder="Escriba algo para filtrar" /><br />
    </div>
</div>
<table id="tbCelulas" class="table table-hover table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoCelula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LiderNavigation.Nombre)
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lugar)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CelulaRaizNavigation)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoCelula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LiderNavigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LiderNavigation.Apellido1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LiderNavigation.Apellido2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lugar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CelulaRaizNavigation.CodigoCelula)
            </td>
        </tr>
        }
    </tbody>
</table>
<script type="text/javascript" src="~/js/BusquedaTablas.js"></script>