@model SistemaCIA.Models.ContextDb.Informescelulares

@{
    ViewData["Title"] = "Agregar Informe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Informe celular</h2>

<h4>Agregar informe de esta semana</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarInforme">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asistencia" class="control-label"></label>
                <input asp-for="Asistencia" class="form-control" />
                <span asp-validation-for="Asistencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visitas" class="control-label"></label>
                <input asp-for="Visitas" class="form-control" />
                <span asp-validation-for="Visitas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ofrenda" class="control-label"></label>
                <input asp-for="Ofrenda" class="form-control" />
                <span asp-validation-for="Ofrenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observaciones" class="control-label"></label>
                <input asp-for="Observaciones" class="form-control" />
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="SeRealizo" /> @Html.DisplayNameFor(model => model.SeRealizo)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

